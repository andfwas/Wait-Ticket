<!DOCTYPE html>

<html>
<head>
    <meta>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="main.css" rel="stylesheet" type="text/css">

    <title>{{title}}</title>
</head>

<body>
    <h3>{{title}}</h3>{{#each testData}}

    <h3>{{this.title}}</h3>

    <h4>{{this.sub_title}}</h4>

    <p>{{this.zipcode}}</p>{{/each}}

    <form action="/api/tickets" id="firstform" method="post">
        <label>Event Title</label> <input class="form-control" id="event_title" name="event_title"> <label>Date</label> <input class="form-control" id="form_date" name="form_date"> <label>Time</label> <input class="form-control" id="form_time" name="form_time"> <label>Venue</label> <input class="form-control" id="form_venue" name="form_venue"> <select class="form-control" name="form_type">
            <option value="one">
                Music
            </option>

            <option value="two">
                Sports
            </option>

            <option value="three">
                Other
            </option>
        </select> <label>Ticket Link</label> <input class="form-control" name="ticket_link"> <button class="btn btn-info" id="submit-btn" type="submit">Submit</button>
    </form>

    <form id="secondform">
        <label>Name</label> <input class="form-control" name="user_name"> <label>Email</label> <input class="form-control" name="user_email"> <label>Username</label> <input class="form-control" name="username"> <label>Password</label> <input class="form-control" name="user_password"> <button class="btn btn-info" id="submit-btn" type="submit">Submit</button>
    </form>
    
    <script charset="utf-8" src="/main.js" type="text/javascript">
</script><script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" type="text/javascript">
</script><script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" type="text/javascript">
</script><script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" type="text/javascript">
</script>
</body>
</html>
